header
     a(href="/").header__logo
        i.fab.fa-youtube 
     nav 
        ul    
           li 
              a(href="/search")
                  i.fas.fa-search
           if loggedIn     
                li
                  a(href="/users/edit").header__login-btn Edit Profile 
                li
                  a(href="/videos/upload").header__login-btn Upload Video
                li
                  a(href="/users/logout").header__login-btn Log out
                li
                  a(href=`/users/${loggedInUser._id}`)
                      if loggedInUser.avatarUrl === ""
                          span My Profile
                      else 
                         if  loggedInUser.avatarUrl.includes("github")
                                 img.header__avatar(src=loggedInUser.avatarUrl)
                         else                      
                                 img.header__avatar(src="/" + loggedInUser.avatarUrl)
           else                      
             li
                a(href="/join").header__btn Join   
             li
                a(href="/login").header__btn Login  