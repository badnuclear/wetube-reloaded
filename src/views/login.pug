extends base.pug

block content 
    if errorMessage  
         span=errorMessage
    form(method="POST")
         input(placeholder="Username", name="username", type="text", required) 
         input(placeholder="Password", name="password", type="password", required)
         input(type="submit", value="Login")
         br
         a(href="/users/github/start").social__btn--github Continue with Github &rarr;  
         br
         a(href="/users/kakao/start") Continue with Kakao Talk &rarr;  
    
    hr
    div 
         span Don't have an account?
         a(href="/join") Create one now &rarr;   